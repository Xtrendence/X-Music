{
  "name": "X-Music",
  "version": "1.0.1",
  "description": "A cross-platform music player running on Node.js (with Electron).",
  "main": "app/server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron app/server.js",
    "pack": "build --dir",
    "dist": "electron-builder -mwl"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Xtrendence/X-Music.git"
  },
  "author": "Xtrendence <xtrendence@gmail.com> (https://www.xtrendence.com)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Xtrendence/X-Music/issues"
  },
  "homepage": "https://github.com/Xtrendence/X-Music#readme",
  "dependencies": {
    "body-parser": "^1.19.0",
    "ejs": "^3.1.5",
    "electron-localshortcut": "^3.2.1",
    "express": "^4.17.1",
    "glob": "^7.1.6",
    "ip": "^1.1.5",
    "mime-types": "^2.1.27",
    "music-metadata": "^7.0.2"
  },
  "build": {
    "appId": "com.xtrendence.x-music",
    "asar": true,
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "mac": {
      "category": "public.app-category.music"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "NSIS",
      "icon": "build/icon.ico"
    }
  },
  "devDependencies": {
    "electron": "^10.1.1",
    "electron-builder": "^22.8.1"
  }
}
